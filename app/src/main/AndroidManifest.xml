<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobilecbtexam">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="PCNL CBT"
            android:theme="@style/AppTheme_two">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeScreen" />
        <activity android:name=".CreateAccount" />
        <activity android:name=".LoginScreen" />
        <activity android:name=".AllUsersView" />
        <activity
            android:name=".AccountHome"
            android:label="@string/app_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CbtWindow"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CbtResult"
            android:label="@string/app_result"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewCbt"
            android:label="@string/app_all"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProfileView"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>